@{
    Layout = null;
}
@model PrintTemplate
@{PrintManager pm = new PrintManager(User.Identity.GetAccount().ApplicationId);}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <title>打印预览</title>
    <style>

        @("@")media print{
            .noprint{
                display:none;
            }
        }
    </style>
</head>
<body>
    <div style="width: @(ViewBag.Width)px;">
        @Html.Raw(pm.RenderPrintTemplate(ViewBag.TemplateId, ViewBag.PrintData as PrintData))
    </div>
    <script>
        window.print();
    </script>
</body>
</html>
