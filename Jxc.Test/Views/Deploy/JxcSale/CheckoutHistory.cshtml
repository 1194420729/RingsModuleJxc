<script type="text/ng-template" id="checkouthistory.html">
    <div class="modal-header">
        <h3 class="modal-title">
            结算情况
        </h3>
    </div>
    <div class="modal-body">
        <div class="alert alert-success" ng-show="waitdata" role="alert">正在加载数据，请稍候<i class="fa fa-refresh fa-spin fa-fw"></i></div>
        <div ng-hide="waitdata">
            <table ng-table="tableParams" show-filter="false" class="table table-bordered table-condensed table-hover">
                <tr ng-repeat="m in $data">
                    <td data-title="'No.'" header-class="'bg-warning'" style="max-width:80px;">
                        <span ng-bind="(tableParams.page()-1)*tableParams.count()+$index+1"></span>
                    </td>
                    <td data-title="'单据编号'" header-class="'bg-warning'">
                        <a ng-href="/jxcbillcenter/billdetail?billid={{m.id}}" target="_blank" ng-bind=" m.billcode" title="查看原始单据"></a>
                    </td>
                    <td data-title="'单据名称'" header-class="'bg-warning'">
                        <span ng-bind=" m.billname | billname"></span>
                    </td>
                    <td data-title="'单据日期'" header-class="'bg-warning'">
                        <span ng-bind="m.billdate"></span>
                    </td>
                    <td data-title="'经手人'" header-class="'bg-warning'">
                        <span ng-bind="m.employeename"></span>
                    </td>
                    <td data-title="'制单人'" header-class="'bg-warning'">
                        <span ng-bind="m.makername"></span>
                    </td>
                    <td data-title="'结算金额'" header-class="'bg-warning'">
                        <span ng-bind="m.checkouttotal | currency:'￥'"></span>
                    </td>
                    <td data-title="'备注'" header-class="'bg-warning'" style="max-width:200px;text-align:left;">
                        <span ng-bind="m.comment | comment:15" title="{{m.comment}}"></span>
                    </td>

                </tr>
                <tr class="warning">
                    <td colspan="6">
                        合计：<span ng-bind="totalrecordes"></span>条记录
                    </td>
                    <td ng-bind="totalsum | currency:'￥'"></td>
                    <td></td>

                </tr>
            </table>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-warning" type="button" ng-click="cancel()">
            关闭
        </button>
    </div>

</script>