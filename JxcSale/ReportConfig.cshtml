<script type="text/ng-template" id="reportconfig.html">
    <div class="modal-header">
        <h3 class="modal-title">
            报表配置
        </h3>
    </div>
    <div class="modal-body">
        
        <div class="form-group form-inline">
            <div class="checkbox">
                <label><input type="checkbox" ng-model="model.showstandard" />显示产品规格</label>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" ng-model="model.showtype" />显示产品型号</label>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" ng-model="model.showunit" />显示计量单位</label>
            </div>
        </div>
        <div class="form-group form-inline">
            <div class="checkbox">
                <label><input type="checkbox" ng-model="model.showarea" />显示产地</label>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" ng-model="model.showbarcode" />显示条码</label>
            </div>
        </div>
        <div class="form-group form-inline">
            <div class="checkbox">
                <label><input type="checkbox" ng-model="model.showtotal" />显示未税金额</label>
            </div>
        </div>
        <div class="form-group form-inline">
            <div class="checkbox">
                <label><input type="checkbox" ng-model="model.showdiscounttotal" />显示含税金额</label>
            </div>
        </div>
    </div>
    <div class="modal-footer">         
        <button class="btn btn-primary" type="button" ng-click="ok()">
            确定
        </button>
        <button class="btn btn-warning" type="button" ng-click="cancel()">
            取消
        </button>
    </div>

</script>